@model IEnumerable<WebMvc.Models.Shop>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="bg-info text-white">Shops</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr><th>
                Name
            </th><th>
                Open
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Open)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShopId" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShopId" class="btn btn-secondary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShopId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
